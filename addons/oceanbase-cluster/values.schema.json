{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "version": {
            "title": "Version",
            "description": "Cluster version.",
            "type": "string",
            "default": "oceanbase-4.3.0.1-100000242024032211"
        },
        "obClusters": {
            "title": "ObClusters",
            "description": "OceanBase Clusters, for standalone mode, set to 1, for primary-secondary mode, set to 2.",
            "type": [
                "integer"
            ],
            "default": 2,
            "minimum": 1,
            "maximum": 2
        },
        "zoneCount": {
            "title": "ZoneCount",
            "description": "OceanBase Zones.",
            "type": [
              "integer"
          ],
            "default": 1,
            "minimum": 1,
            "maximum": 3
        },
        "replicas": {
            "title": "Replicas",
            "description": "The number of replicas, no less than zoneCount.",
            "type": [
              "integer"
          ],
            "default": { "$data": "/zoneCount" },
            "minimum": 1,
            "maximum": 6
        },
        "cpu": {
            "title": "CPU",
            "description": "CPU cores.",
            "type": [
                "number",
                "string"
            ],
            "default": 8,
            "minimum": 2,
            "maximum": 128,
            "multipleOf": 0.5
        },
        "memory": {
            "title": "Memory(Gi)",
            "description": "Memory, the unit is Gi.",
            "type": [
                "number",
                "string"
            ],
            "default": 16,
            "minimum": 2,
            "maximum": 1024
        },
        "datafile": {
            "title": "Data file Storage(Gi)",
            "description": "Data file Storage size, the unit is Gi.",
            "type": [
                "number",
                "string"
            ],
            "default": 50,
            "minimum": 20,
            "maximum": 10000
        },
        "datalog": {
            "title": "Data log Storage(Gi)",
            "description": "Data log Storage size, the unit is Gi.",
            "type": [
                "number",
                "string"
            ],
            "default": 50,
            "minimum": 20,
            "maximum": 10000
        },
        "log": {
            "title": "Log Storage(Gi)",
            "description": "Log Storage size, the unit is Gi.",
            "type": [
                "number",
                "string"
            ],
            "default": 20,
            "minimum": 1,
            "maximum": 100
        }
    },
    "required": [
        "obClusters",
        "zoneCount",
        "replicas"
    ]
}