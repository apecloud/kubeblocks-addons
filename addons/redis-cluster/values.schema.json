{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "useLegacyCompDef": {
      "type": "boolean",
      "default": false,
      "title": "useLegacyCompDef",
      "description": "if useLegacyCompDef is false ,cluster will be rendered by compDef rather than componentDefRef in cluster definition"
    },
    "version": {
      "title": "Version",
      "description": "Cluster version.",
      "type": "string",
      "default": "redis-7.0.6"
    },
    "mode": {
      "title": "Mode",
      "description": "Cluster topology mode.",
      "type": "string",
      "default": "replication",
      "enum": [
        "standalone",
        "replication",
        "cluster"
      ]
    },
    "replicas": {
      "title": "Replicas",
      "description": "The number of replicas, for standalone mode, the replicas is 1, for replication mode, the default replicas is 2.",
      "type": "integer",
      "default": 1,
      "minimum": 1,
      "maximum": 5
    },
    "cpu": {
      "title": "CPU",
      "description": "CPU cores.",
      "type": [
        "number",
        "string"
      ],
      "default": 0.5,
      "minimum": 0.5,
      "maximum": 64,
      "multipleOf": 0.5
    },
    "memory": {
      "title": "Memory(Gi)",
      "description": "Memory, the unit is Gi.",
      "type": [
        "number",
        "string"
      ],
      "default": 0.5,
      "minimum": 0.5,
      "maximum": 1000
    },
    "storage": {
      "title": "Storage(Gi)",
      "description": "Storage size, the unit is Gi.",
      "type": [
        "number",
        "string"
      ],
      "default": 20,
      "minimum": 1,
      "maximum": 10000
    },
    "nodePortEnabled": {
      "type": "boolean",
      "default": false,
      "title": "nodePortEnabled",
      "description":"Whether NodePort service is enabled, default is true"
    },
    "twemproxy": {
      "title": "The redis twemproxy component",
      "type": "object",
      "properties": {
        "enabled": {
          "description":"Whether have twemproxy component, default is false",
          "title": "twemproxy.enable",
          "type": "boolean",
          "default": false
        },
        "cpu": {
          "description": "twemproxy component cpu cores.",
          "title": "sentinel cpu",
          "type": "number",
          "default": 0.2,
          "minimum": 0.1,
          "maximum": 8
        },
        "memory": {
          "description": "twemproxy component memory, the unit is Gi.",
          "title": "sentinel memory",
          "type": "number",
          "default": 0.2,
          "minimum": 0.1,
          "maximum": 4
        },
        "replicas": {
          "description": "twemproxy component replicas",
          "title": "twemproxy replicas",
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 5
        }
      }
    },
    "sentinel": {
      "title": "The redis sentinel",
      "type": "object",
      "properties": {
        "enabled": {
          "description":"Whether have sentinel component, default is true",
          "title": "sentinel.enable",
          "type": "boolean",
          "default": true
        },
        "cpu": {
          "description": "Sentinel component cpu cores.",
          "title": "sentinel cpu",
          "type": "number",
          "default": 0.2,
          "minimum": 0.1,
          "maximum": 8
        },
        "memory": {
          "description": "Sentinel component memory, the unit is Gi.",
          "title": "sentinel memory",
          "type": "number",
          "default": 0.2,
          "minimum": 0.1,
          "maximum": 4
        },
        "storage": {
          "description": "Sentinel component storage size, the unit is Gi.",
          "title": "sentinel storage",
          "type": "number",
          "default": 20,
          "minimum": 1,
          "maximum": 1024
        },
        "replicas": {
          "description": "Sentinel component replicas",
          "title": "sentinel replicas",
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 5
        }
      }
    },
    "redisCluster":{
      "title": "The official redis cluster mode",
      "type": "object",
      "properties": {
        "shardCount": {
          "description": "The number of shards in the redis cluster",
          "title": "shardCount",
          "type": "number",
          "default": 3,
          "minimum": 3,
          "maximum": 2048
        }
      }
    }
  }
}
