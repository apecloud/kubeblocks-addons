{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "version": {
      "title": "Version",
      "description": "Cluster version.",
      "type": "string",
      "default": "redis-7.0.6"
    },
    "mode": {
      "title": "Mode",
      "description": "Cluster topology mode.",
      "type": "string",
      "default": "standalone",
      "enum": [
        "standalone",
        "replication"
      ]
    },
    "replicas": {
      "title": "Replicas",
      "description": "The number of replicas, for standalone mode, the replicas is 1, for replication mode, the default replicas is 2.",
      "type": "integer",
      "default": 1,
      "minimum": 1,
      "maximum": 5
    },
    "cpu": {
      "title": "CPU",
      "description": "CPU cores.",
      "type": [
        "number",
        "string"
      ],
      "default": 0.5,
      "minimum": 0.5,
      "maximum": 64,
      "multipleOf": 0.5
    },
    "memory": {
      "title": "Memory(Gi)",
      "description": "Memory, the unit is Gi.",
      "type": [
        "number",
        "string"
      ],
      "default": 0.5,
      "minimum": 0.5,
      "maximum": 1000
    },
    "storage": {
      "title": "Storage(Gi)",
      "description": "Storage size, the unit is Gi.",
      "type": [
        "number",
        "string"
      ],
      "default": 20,
      "minimum": 1,
      "maximum": 10000
    },
    "nodePort": {
      "title": "The nodePort Schema",
      "type": "object",
      "properties": {
        "enable": {
          "title": "Whether NodePort service is enabled, default is true",
          "type": "boolean",
          "default": true
        }
      }
    },
    "sentinel": {
      "title": "The sentinel Schema",
      "type": "object",
      "properties": {
        "enable": {
          "title": "Whether have sentinel component, default is true",
          "type": "boolean",
          "default": true
        },
        "cpu": {
          "title": "Sentinel component cpu cores.",
          "type": "number",
          "default": 0.2,
          "minimum": 0.1,
          "maximum": 8
        },
        "memory": {
          "title": "Sentinel component memory, the unit is Gi.",
          "type": "number",
          "default": 0.2,
          "minimum": 0.1,
          "maximum": 4
        },
        "storage": {
          "title": "Sentinel component storage size, the unit is Gi.",
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 10
        },
        "replicas": {
          "title": "Sentinel component replicas",
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 5
        }
      }
    }
  }
}
