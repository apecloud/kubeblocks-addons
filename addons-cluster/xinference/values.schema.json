{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "cpuMode": {
      "title": "CPU Mode",
      "description": "Set to true if no GPU is available",
      "type": "boolean",
      "default": false
    },
    "replicas": {
      "title": "Replicas",
      "description": "The number of replicas, for standalone mode, the replicas is 1, for replication mode, the default replicas is 2.",
      "type": "integer",
      "default": 1,
      "minimum": 1,
      "maximum": 5
    },
    "cpu": {
      "title": "CPU",
      "description": "CPU cores.",
      "type": [
        "number",
        "string"
      ],
      "default": 0,
      "minimum": 0,
      "maximum": 64,
      "pattern": "^[0-9]+(\\.[0-9]+)?$",
      "multipleOf": 0.5
    },
    "memory": {
      "title": "Memory(Gi)",
      "description": "Memory, the unit is Gi.",
      "type": [
        "number",
        "string"
      ],
      "default": 0,
      "minimum": 0,
      "maximum": 1000,
      "pattern": "^[0-9]+(\\.[0-9]+)?$"
    },
    "gpu": {
      "title": "GPU",
      "description": "GPU cores.",
      "type": [
        "number",
        "string"
      ],
      "default": 1,
      "minimum": 0,
      "maximum": 64,
      "pattern": "^[0-9]+(\\.[0-9]+)?$",
      "multipleOf": 1
    }
  }
}
