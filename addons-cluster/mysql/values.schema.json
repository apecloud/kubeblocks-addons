{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "version": {
      "title": "Version",
      "description": "MySQL version",
      "type": "string",
      "default": "8.0.39",
      "enum": [
        "8.0.39",
        "8.0.38",
        "8.0.37",
        "8.0.36",
        "8.4.2",
        "8.4.1",
        "8.4.0",
        "5.7.44"
      ]
    },
    "mode": {
      "title": "Mode",
      "description": "Cluster topology mode.",
      "type": "string",
      "default": "standalone",
      "enum": [
        "standalone",
        "replication"
      ]
    },
    "replicas": {
      "title": "Replicas",
      "description": "The number of replicas.",
      "type": "integer",
      "default": 1,
      "minimum": 1,
      "maximum": 5
    },
    "cpu": {
      "title": "CPU",
      "description": "CPU cores.",
      "type": [
        "number",
        "string"
      ],
      "default": 1,
      "minimum": 0.5,
      "maximum": 64,
      "multipleOf": 0.5
    },
    "memory": {
      "title": "Memory(Gi)",
      "description": "Memory, the unit is Gi.",
      "type": [
        "number",
        "string"
      ],
      "default": 1,
      "minimum": 0.5,
      "maximum": 1000
    },
    "storage": {
      "title": "Storage(Gi)",
      "description": "Storage size, the unit is Gi.",
      "type": [
        "number",
        "string"
      ],
      "default": 20,
      "minimum": 1,
      "maximum": 10000
    },
    "topology": {
      "type": "string",
      "default": "server",
      "description": "Topology type of the server",
      "enum": [
        "server",
        "server-with-proxy",
        "orc",
        "orc-with-proxy"
      ]
    },
    "proxysql": {
      "type": "object",
      "properties": {
        "replicas": { "type": "integer", "default": 1 },
        "cpu": { "type": "number", "default": 1 },
        "memory": { "type": "number", "default": 1, "description": "Memory, the unit is Gi." }
      },
      "description": "Proxysql configuration"
    }
  }
}
