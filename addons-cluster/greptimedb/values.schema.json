{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "nameOverride": {
      "title": "Name",
      "description": "The override name.",
      "type": "string",
      "default": ""
    },
    "fullnameOverride": {
      "title": "Fullname",
      "description": "The override fullname.",
      "type": "string",
      "default": ""
    },
    "terminationPolicy": {
      "title": "TerminationPolicy",
      "description": "The policy of termination.",
      "type": "string",
      "default": "Delete",
      "enum": [
        "Delete",
        "DoNotTerminate",
        "WipeOut"
      ]
    },
    "replicas": {
      "title": "Replicas",
      "description": "The number of replicas.",
      "type": "integer",
      "default": 1,
      "minimum": 1,
      "maximum": 5
    },
    "cpu": {
      "title": "CPU",
      "description": "CPU cores.",
      "type": [
        "number",
        "string"
      ],
      "default": 0.5,
      "minimum": 0.5,
      "maximum": 64,
      "pattern": "^[0-9]+(\\.[0-9]+)?$",
      "multipleOf": 0.5
    },
    "memory": {
      "title": "Memory(Gi)",
      "description": "Memory, the unit is Gi.",
      "type": [
        "number",
        "string"
      ],
      "default": 0.5,
      "minimum": 0.5,
      "maximum": 1000,
      "pattern": "^[0-9]+(\\.[0-9]+)?$"
    },
    "storage": {
      "title": "Storage(Gi)",
      "description": "Storage size, the unit is Gi.",
      "type": [
        "number",
        "string"
      ],
      "default": 10,
      "minimum": 1,
      "maximum": 10000,
      "pattern": "^[0-9]+(\\.[0-9]+)?$"
    },
    "datanode": {
      "title": "Datanode Configurations",
      "description": "Configuration for datanode instances in the cluster.",
      "type": "object",
      "properties": {
        "replicas": {
          "title": "Replicas",
          "description": "Number of replicas for the datanode.",
          "type": "integer",
          "default": 3,
          "minimum": 1
        },
        "resources": {
          "title": "Resource Requests and Limits",
          "description": "CPU and memory resource requests and limits for each datanode pod. We usually recommend not to specify default resources and to leave this as a conscious choice for the user. This also increases chances charts run on environments with little resources, such as Minikube. If you do want to specify resources, adjust them as necessary.",
          "type": "object",
          "properties": {
            "limits": {
              "title": "Limits",
              "description": "The maximum amount of CPU and memory that can be used by the container.",
              "type": "object",
              "properties": {
                "cpu": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "default": 1,
                  "minimum": 0.5,
                  "maximum": 64,
                  "pattern": "^[0-9]+(\\.[0-9]+)?$",
                  "multipleOf": 0.5
                },
                "memory": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "default": 1,
                  "minimum": 0.5,
                  "maximum": 1000,
                  "pattern": "^[0-9]+(\\.[0-9]+)?$",
                  "multipleOf": 0.5
                }
              }
            },
            "requests": {
              "title": "Requests",
              "description": "The minimum amount of CPU and memory that should be allocated to the container.",
              "type": "object",
              "properties": {
                "cpu": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "default": 1,
                  "minimum": 0.5,
                  "maximum": 64,
                  "pattern": "^[0-9]+(\\.[0-9]+)?$",
                  "multipleOf": 0.5
                },
                "memory": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "default": 1,
                  "minimum": 0.5,
                  "maximum": 1000,
                  "pattern": "^[0-9]+(\\.[0-9]+)?$",
                  "multipleOf": 0.5
                }
              }
            }
          }
        },
        "volume": {
          "title": "Volume Configuration",
          "description": "Storage volume configuration for each datanode pod.",
          "type": "object",
          "properties": {
            "storage": {
              "title": "Storage Size (Gi)",
              "description": "Size of the persistent storage volume in Gi.",
              "type": [
                "number",
                "string"
              ],
              "default": 10,
              "minimum": 1,
              "maximum": 10000,
              "pattern": "^[0-9]+(\\.[0-9]+)?$"
            },
            "storageClassName": {
              "title": "Storage Class Name",
              "description": "Storage class name of the data volume",
              "type": "string",
              "default": ""
            }
          }
        }
      }
    },
    "etcd": {
      "title": "Etcd Configurations",
      "description": "Configuration for etcd instances in the cluster.",
      "type": "object",
      "properties": {
        "replicas": {
          "title": "Replicas",
          "description": "Number of replicas for the etcd cluster.",
          "type": "integer",
          "default": 3,
          "minimum": 1
        },
        "resources": {
          "title": "Resource Requests and Limits",
          "description": "CPU and memory resource requests and limits for each etcd pod.",
          "type": "object"
        },
        "volume": {
          "title": "Volume Configuration",
          "description": "Storage volume configuration for each etcd pod.",
          "type": "object",
          "properties": {
            "storage": {
              "title": "Storage Size (Gi)",
              "description": "Size of the persistent storage volume in Gi.",
              "type": [
                "number",
                "string"
              ],
              "default": 10,
              "minimum": 1,
              "maximum": 10000,
              "pattern": "^[0-9]+(\\.[0-9]+)?$"
            },
            "storageClassName": {
              "title": "Storage Class Name",
              "description": "Storage class name of the data volume",
              "type": "string",
              "default": ""
            }
          }
        }
      }
    },
    "meta": {
      "title": "Meta Configurations",
      "description": "Configuration for meta instances in the cluster.",
      "type": "object",
      "properties": {
        "replicas": {
          "title": "Replicas",
          "description": "Number of replicas for the meta service.",
          "type": "integer",
          "default": 1,
          "minimum": 1
        },
        "resources": {
          "title": "Resource Requests and Limits",
          "description": "CPU and memory resource requests and limits for each meta pod.",
          "type": "object",
          "properties": {
            "limits": {
              "title": "Limits",
              "description": "The maximum amount of CPU and memory that can be used by the container.",
              "type": "object",
              "properties": {
                "cpu": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "default": 1,
                  "minimum": 0.5,
                  "maximum": 64,
                  "pattern": "^[0-9]+(\\.[0-9]+)?$",
                  "multipleOf": 0.5
                },
                "memory": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "default": 1,
                  "minimum": 0.5,
                  "maximum": 1000,
                  "pattern": "^[0-9]+(\\.[0-9]+)?$",
                  "multipleOf": 0.5
                }
              }
            },
            "requests": {
              "title": "Requests",
              "description": "The minimum amount of CPU and memory that should be allocated to the container.",
              "type": "object",
              "properties": {
                "cpu": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "default": 1,
                  "minimum": 0.5,
                  "maximum": 64,
                  "pattern": "^[0-9]+(\\.[0-9]+)?$",
                  "multipleOf": 0.5
                },
                "memory": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "default": 1,
                  "minimum": 0.5,
                  "maximum": 1000,
                  "pattern": "^[0-9]+(\\.[0-9]+)?$",
                  "multipleOf": 0.5
                }
              }
            }
          }
      }
      }
    },
    "frontend": {
      "title": "Frontend Configurations",
      "description": "Configuration for frontend instances in the cluster.",
      "type": "object",
      "properties": {
        "replicas": {
          "title": "Replicas",
          "description": "Number of replicas for the frontend service.",
          "type": "integer",
          "default": 1,
          "minimum": 1
        },
        "resources": {
          "title": "Resource Requests and Limits",
          "description": "CPU and memory resource requests and limits for each frontend pod.",
          "type": "object",
          "properties": {
            "limits": {
              "title": "Limits",
              "description": "The maximum amount of CPU and memory that can be used by the container.",
              "type": "object",
              "properties": {
                "cpu": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "default": 1,
                  "minimum": 0.5,
                  "maximum": 64,
                  "pattern": "^[0-9]+(\\.[0-9]+)?$",
                  "multipleOf": 0.5
                },
                "memory": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "default": 1,
                  "minimum": 0.5,
                  "maximum": 1000,
                  "pattern": "^[0-9]+(\\.[0-9]+)?$",
                  "multipleOf": 0.5
                }
              }
            },
            "requests": {
              "title": "Requests",
              "description": "The minimum amount of CPU and memory that should be allocated to the container.",
              "type": "object",
              "properties": {
                "cpu": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "default": 1,
                  "minimum": 0.5,
                  "maximum": 64,
                  "pattern": "^[0-9]+(\\.[0-9]+)?$",
                  "multipleOf": 0.5
                },
                "memory": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "default": 1,
                  "minimum": 0.5,
                  "maximum": 1000,
                  "pattern": "^[0-9]+(\\.[0-9]+)?$",
                  "multipleOf": 0.5
                }
              }
            }
          }
        }
      }
    }
  }
}
