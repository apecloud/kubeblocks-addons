{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "zoneCount": {
            "title": "ZontCount",
            "description": "OceanBase Zones.",
            "type": [
              "integer"
          ],
            "default": 1,
            "minimum": 1,
            "maximum": 3
        },
        "replicas": {
            "title": "Replicas",
            "description": "The number of replicas, no less than zoneCount.",
            "type": [
              "integer"
          ],
            "minimum": 1,
            "maximum": 6
        },
        "cpu": {
            "title": "CPU",
            "description": "CPU cores.",
            "type": [
                "number",
                "string"
            ],
            "default": 8,
            "minimum": 3,
            "maximum": 128,
            "multipleOf": 0.5
        },
        "memory": {
            "title": "Memory(Gi)",
            "description": "Memory, the unit is Gi.",
            "type": [
                "number",
                "string"
            ],
            "default": 16,
            "minimum": 4,
            "maximum": 1024
        },
        "datafile": {
            "title": "Data file Storage(Gi)",
            "description": "Data file Storage size, the unit is Gi.",
            "type": [
                "number",
                "string"
            ],
            "default": 50,
            "minimum": 20,
            "maximum": 10000
        },
        "datalog": {
            "title": "Data log Storage(Gi)",
            "description": "Data log Storage size, the unit is Gi.",
            "type": [
                "number",
                "string"
            ],
            "default": 50,
            "minimum": 20,
            "maximum": 10000
        },
        "log": {
            "title": "Log Storage(Gi)",
            "description": "Log Storage size, the unit is Gi.",
            "type": [
                "number",
                "string"
            ],
            "default": 20,
            "minimum": 10,
            "maximum": 100
        },
        "hostnetwork": {
            "title": "Host Network",
            "description": "Enable or Disable Pod Host Network.",
            "type": "string",
            "default": "enabled",
            "enum": [
                "enabled",
                "disabled"
            ]
        },
        "clusterIP": {
            "title": "Cluster IP",
            "description": "Enable or Disable ClusterIP SVC IP as POD IP.",
            "type": "string",
            "default": "enabled",
            "enum": [
                "enabled",
                "disabled"
            ]
        }
    },
    "required": [
        "zoneCount",
        "replicas"
    ]
}