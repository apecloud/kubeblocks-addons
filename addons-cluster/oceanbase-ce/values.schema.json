{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "version": {
            "title": "Version",
            "description": "Version.",
            "type": "string",
            "default": "4.3.0"
        },
        "zoneCount": {
            "title": "ZontCount",
            "description": "OceanBase Zones.",
            "type": [
                "integer"
            ],
            "default": 1,
            "minimum": 1,
            "maximum": 3
        },
        "replicas": {
            "title": "Replicas",
            "description": "The number of replicas, no less than zoneCount.",
            "type": [
                "integer"
            ],
            "minimum": 1,
            "maximum": 6
        },
        "cpu": {
            "title": "CPU",
            "description": "CPU cores.",
            "type": [
                "number",
                "string"
            ],
            "default": 8,
            "minimum": 3,
            "maximum": 128,
            "multipleOf": 0.5
        },
        "memory": {
            "title": "Memory(Gi)",
            "description": "Memory, the unit is Gi.",
            "type": [
                "number",
                "string"
            ],
            "default": 16,
            "minimum": 4,
            "maximum": 1024
        },
        "hostnetwork": {
            "title": "Host Network",
            "description": "Enable or Disable Pod Host Network.",
            "type": "string",
            "default": "enabled",
            "enum": [
                "enabled",
                "disabled"
            ]
        },
        "clusterIP": {
            "title": "Cluster IP",
            "description": "Enable or Disable ClusterIP SVC IP as POD IP.",
            "type": "string",
            "default": "enabled",
            "enum": [
                "enabled",
                "disabled"
            ]
        },
        "persistence": {
            "type": "object",
            "properties": {
                "storageClassName": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": "",
                    "description": "Storage class name used by persistent volumes"
                },
                "storages": {
                    "type": "object",
                    "properties": {
                        "data-file": {
                            "type": "integer",
                            "default": 30,
                            "description": "Size of data file storage in GiB"
                        },
                        "data-log": {
                            "type": "integer",
                            "default": 30,
                            "description": "Size of data log storage in GiB"
                        },
                        "log": {
                            "type": "integer",
                            "default": 10,
                            "description": "Size of log storage in GiB"
                        },
                        "workdir": {
                            "type": "integer",
                            "default": 1,
                            "description": "Size of work directory storage in GiB"
                        }
                    },
                    "additionalProperties": false,
                    "description": "Sizes of different storages in GiB"
                }
            }
        },
        "required": [
            "zoneCount",
            "replicas"
        ]
    }
}