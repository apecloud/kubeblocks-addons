{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "serviceVersion": {
      "title": "ServiceVersion",
      "description": "The version of ElasticSearch.",
      "type": "string",
      "default": "8.8"
    },
    "mode": {
      "title": "Mode",
      "description": "Mode for ElasticSearch",
      "type": "string",
      "default": "multi-node",
      "enum": [
        "single-node",
        "multi-node"
      ]
    },
    "replicas": {
      "title": "Replicas",
      "description": "The number of replicas, for single-node mode, the replicas is 1, for multi-node mode, the default replicas is 3.",
      "type": "integer",
      "default": 1,
      "minimum": 1,
      "maximum": 5
    },
    "cpu": {
      "title": "CPU",
      "description": "CPU cores.",
      "type": [
        "number",
        "string"
      ],
      "default": 1,
      "minimum": 0.5,
      "maximum": 64,
      "multipleOf": 0.5
    },
    "memory": {
      "title": "Memory(Gi)",
      "description": "Memory, the unit is Gi.",
      "type": [
        "number",
        "string"
      ],
      "default": 2,
      "minimum": 1,
      "maximum": 1000
    },
    "storage": {
      "title": "Storage(Gi)",
      "description": "Storage size, the unit is Gi.",
      "type": [
        "number",
        "string"
      ],
      "default": 20,
      "minimum": 1,
      "maximum": 10000
    }
  }
}
