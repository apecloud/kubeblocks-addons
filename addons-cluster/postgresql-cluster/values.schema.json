{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "version": {
      "title": "Version",
      "description": "Cluster version.",
      "type": "string",
      "default": "postgresql-14.8.0"
    },
    "mode": {
      "title": "Mode",
      "description": "Cluster topology mode.",
      "type": "string",
      "default": "standalone",
      "enum": [
        "standalone",
        "replication",
        "standby"
      ]
    },
    "replicas": {
      "title": "Replicas",
      "description": "The number of replicas, for standalone mode, the replicas is 1, for replication mode, the default replicas is 2.",
      "type": "integer",
      "default": 1,
      "minimum": 1,
      "maximum": 5
    },
    "cpu": {
      "title": "CPU",
      "description": "CPU cores.",
      "type": [
        "number",
        "string"
      ],
      "default": 0.5,
      "minimum": 0.5,
      "maximum": 256,
      "multipleOf": 0.5
    },
    "memory": {
      "title": "Memory(Gi)",
      "description": "Memory, the unit is Gi.",
      "type": [
        "number",
        "string"
      ],
      "default": 0.5,
      "minimum": 0.5,
      "maximum": 1000
    },
    "storage": {
      "title": "Storage(Gi)",
      "description": "Storage size, the unit is Gi.",
      "type": [
        "number",
        "string"
      ],
      "default": 20,
      "minimum": 1,
      "maximum": 10000
    },
    "storageClassName": {
      "title": "Storage Class Name",
      "description": "Storage class name of the data volume",
      "type": "string"
    },
    "accountSecrets": {
      "type": ["object", "null"],
      "description": "Map of account configurations in secrets",
      "patternProperties": {
        "^[a-z0-9]([a-z0-9-]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*$": {
          "type": "object",
          "required": ["name", "namespace"],
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the secret",
              "minLength": 1,
              "maxLength": 63,
              "pattern": "^[a-z0-9]([a-z0-9-]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*$"
            },
            "namespace": {
              "type": "string",
              "description": "Namespace of the secret",
              "minLength": 1,
              "maxLength": 63,
              "pattern": "^[a-z0-9]([a-z0-9-]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*$"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}
