{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "default": "14.7.2"
    },
    "mode": {
      "type": "string",
      "default": "standalone",
      "enum": [
        "standalone",
        "replication"
      ]
    },
    "replicas": {
      "type": "integer",
      "default": 1,
      "minimum": 1,
      "maximum": 5
    },
    "cpu": {
      "title": "CPU",
      "description": "CPU cores.",
      "type": [
        "number",
        "string"
      ],
      "default": 0.5,
      "minimum": 0.5,
      "maximum": 64,
      "multipleOf": 0.5,
      "pattern": "^[0-9]+(\\.[0-9]+)?$"
    },
    "memory": {
      "title": "Memory(Gi)",
      "description": "Memory, the unit is Gi.",
      "type": [
        "number",
        "string"
      ],
      "default": 0.5,
      "minimum": 0.5,
      "maximum": 1000,
      "pattern": "^[0-9]+(\\.[0-9]+)?$"
    },
    "storage": {
      "title": "Storage(Gi)",
      "description": "Storage size, the unit is Gi.",
      "type": [
        "number",
        "string"
      ],
      "default": 20,
      "minimum": 1,
      "maximum": 10000,
      "pattern": "^[0-9]+(\\.[0-9]+)?$"
    },
    "storageClassName": {
      "title": "Storage Class Name",
      "description": "Storage class name of the data volume",
      "type": "string",
      "default": ""
    }
  }
}
