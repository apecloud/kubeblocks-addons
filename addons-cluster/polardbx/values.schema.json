{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "gms": {
      "type": "object",
      "description": "Global Management Service (GMS) configuration",
      "properties": {
        "replicas": {
          "type": "integer",
          "description": "data replicas of gms instance. Default value is 3, which means a paxos group: leader, follower, follower",
          "default": 3
        },
        "resources": {
          "type": "object",
          "description": "resource management for gms component. more info: https://kubernetes.io/docs/concepts/configuration/manage-resources-containers/",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "title": "CPU request",
                  "description": "CPU request",
                  "default": 1
                },
                "memory": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "title": "Memory request(Gi)",
                  "description": "Memory request",
                  "default": 1
                }
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "title": "CPU limit",
                  "description": "CPU limit",
                  "default": 1
                },
                "memory": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "title": "Memory limit(Gi)",
                  "description": "Memory limit",
                  "default": 1
                }
              }
            }
          }
        },
        "persistence": {
          "type": "object",
          "description": "Enable persistence using Persistent Volume Claims",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable persistence using Persistent Volume Claims",
              "default": true
            },
            "data": {
              "type": "object",
              "description": "`data` volume settings",
              "properties": {
                "storageClassName": {
                  "title": "Storage Class Name",
                  "description": "Storage class name of the data volume",
                  "type": ["string", "null"],
                  "default": null
                },
                "size": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "title": "Size of data volume(Gi)",
                  "description": "Size of data volume, the unit is Gi.",
                  "default": 20,
                  "pattern": "^[0-9]+(\\.[0-9]+)?$"
                }
              }
            }
          }
        }
      }
    },
    "cn": {
      "type": "object",
      "description": "Configuration for polardb-x cn nodes",
      "properties": {
        "replicas": {
          "type": "integer",
          "description": "number of polardb-x cn nodes",
          "default": 2
        },
        "resources": {
          "type": "object",
          "description": "resource management for cn component. more info: https://kubernetes.io/docs/concepts/configuration/manage-resources-containers/",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "title": "CPU request",
                  "description": "CPU request",
                  "default": 1
                },
                "memory": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "title": "Memory request(Gi)",
                  "description": "Memory request",
                  "default": 1
                }
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "title": "CPU limit",
                  "description": "CPU limit",
                  "default": 1
                },
                "memory": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "title": "Memory limit(Gi)",
                  "description": "Memory limit",
                  "default": 1
                }
              }
            }
          }
        }
      }
    },
    "cdc": {
      "type": "object",
      "description": "Configuration for polardb-x cdc nodes",
      "properties": {
        "replicas": {
          "type": "integer",
          "description": "number of polardb-x cdc nodes",
          "default": 2
        },
        "resources": {
          "type": "object",
          "description": "resource management for cdc component. more info: https://kubernetes.io/docs/concepts/configuration/manage-resources-containers/",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "title": "CPU request",
                  "description": "CPU request",
                  "default": 1
                },
                "memory": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "title": "Memory request(Gi)",
                  "description": "Memory request",
                  "default": 1
                }
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "cpu": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "title": "CPU limit",
                  "description": "CPU limit",
                  "default": 1
                },
                "memory": {
                  "type": [
                    "number",
                    "string"
                  ],
                  "title": "Memory limit(Gi)",
                  "description": "Memory limit",
                  "default": 1
                }
              }
            }
          }
        }
      }
    }
  }
}