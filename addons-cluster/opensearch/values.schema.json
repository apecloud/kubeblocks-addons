{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "title": "Application Configuration",
    "description": "Configuration schema for the application Helm chart.",
    "properties": {
        "replicaCount": {
            "type": "integer",
            "default": 1,
            "description": "Number of replicas for the deployment"
        },
        "resources": {
            "type": "object",
            "description": "Resources requested by each replica",
            "properties": {
                "limits": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": [
                                "string",
                                "null"
                            ],
                            "description": "CPU limit"
                        },
                        "memory": {
                            "type": [
                                "string",
                                "null"
                            ],
                            "description": "Memory limit"
                        }
                    }
                },
                "requests": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": [
                                "string",
                                "null"
                            ],
                            "description": "CPU request"
                        },
                        "memory": {
                            "type": [
                                "string",
                                "null"
                            ],
                            "description": "Memory request"
                        }
                    }
                }
            }
        },
        "persistence": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable or disable persistence"
                },
                "data": {
                    "type": "object",
                    "properties": {
                        "storageClassName": {
                            "type": [
                                "string",
                                "null"
                            ],
                            "default": null,
                            "description": "Storage class name used by persistent volumes"
                        },
                        "size": {
                            "type": "string",
                            "default": "1Gi",
                            "description": "Size of persistent volume claim"
                        }
                    }
                }
            }
        },
        "dashboard": {
            "type": "object",
            "properties": {
                "resources": {
                    "type": "object",
                    "description": "Resources requested by each dashboard replica",
                    "properties": {
                        "limits": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": [
                                        "string",
                                        "null"
                                    ],
                                    "description": "CPU limit"
                                },
                                "memory": {
                                    "type": [
                                        "string",
                                        "null"
                                    ],
                                    "description": "Memory limit"
                                }
                            }
                        },
                        "requests": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": [
                                        "string",
                                        "null"
                                    ],
                                    "description": "CPU request"
                                },
                                "memory": {
                                    "type": [
                                        "string",
                                        "null"
                                    ],
                                    "description": "Memory request"
                                }
                            }
                        }
                    }
                },
                "replicaCount": {
                    "type": "integer",
                    "default": 1,
                    "description": "Number of dashboard replicas"
                }
            }
        },
        "serviceAccount": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "default": ""
                }
            }
        }
    }
}